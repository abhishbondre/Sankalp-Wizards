<div class="profile-section">
  <h3>TPO Profile</h3>

  <div class="profile-photo">
    <div class="avatar-wrapper">
      <img
        src="<%= tpo.profile?.photo || '/images/default-avatar.png' %>"
        alt="TPO Profile Photo"
        class="profile-avatar"
      />
      <div class="avatar-badge">
        <i class="bi bi-person-check-fill"></i>
      </div>
    </div>
    <h4 class="profile-name mt-3"><%= tpo.name %></h4>
    <p class="profile-role">Training & Placement Officer</p>
  </div>

  <div class="profile-info">
    <div class="info-group">
      <div class="info-label">
        <i class="bi bi-building"></i>
        <strong>College</strong>
      </div>
      <span class="info-value"
        ><%= tpo.profile?.collegeName || 'Not Set' %></span
      >
    </div>

    <div class="info-group">
      <div class="info-label">
        <i class="bi bi-person-badge"></i>
        <strong>Designation</strong>
      </div>
      <span class="info-value"
        ><%= tpo.profile?.designation || 'Not Set' %></span
      >
    </div>

    <div class="info-group">
      <div class="info-label">
        <i class="bi bi-diagram-3"></i>
        <strong>Department</strong>
      </div>
      <span class="info-value"
        ><%= tpo.profile?.department || 'Not Set' %></span
      >
    </div>

    <div class="info-group">
      <div class="info-label">
        <i class="bi bi-envelope"></i>
        <strong>Email</strong>
      </div>
      <span class="info-value"><%= tpo.email %></span>
    </div>

    <div class="info-group">
      <div class="info-label">
        <i class="bi bi-telephone"></i>
        <strong>Phone</strong>
      </div>
      <span class="info-value"><%= tpo.profile?.phone || 'Not Set' %></span>
    </div>
  </div>

  <div class="profile-actions mt-4">
    <button class="btn btn-outline-primary btn-sm">
      <i class="bi bi-pencil-square"></i> Edit Profile
    </button>
    <button class="btn btn-outline-secondary btn-sm">
      <i class="bi bi-arrow-repeat"></i> Update Photo
    </button>
  </div>
</div>
